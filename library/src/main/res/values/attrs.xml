<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PopupDecorView">
        <attr name="layout_align" format="enum">
            <enum name="left" value="0x01"/>
            <enum name="top" value="0x02"/>
            <enum name="right" value="0x03"/>
            <enum name="bottom" value="0x04"/>
        </attr>
    </declare-styleable>

    <!--全局属性集引用-->
    <attr name="prompt" format="reference"/>

    <declare-styleable name="Prompt">
        <!--进度条布局-->
        <attr name="promptProgressLayout" format="reference"/>
        <attr name="promptProgressIndicator" format="reference"/>
        <attr name="promptProgressText" format="reference"/>
        <!--toast属性-->
        <attr name="promptToast" format="reference"/>
        <attr name="promptToastGravity" format="reference"/>
        <!--crouton属性-->
        <attr name="promptCrouton" format="reference"/>
        <!--success属性-->
        <attr name="promptSuccessLayout" format="reference"/>
        <attr name="promptSuccessTick" format="reference"/>
        <attr name="promptSuccessText" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ToastGravity">
        <attr name="toastGravity" format="enum">
            <!--Gravity.TOP-->
            <enum name="top" value="0x30"/>
            <!--Gravity.BOTTOM-->
            <enum name="bottom" value="0x50"/>
            <!--Gravity.CENTER-->
            <enum name="center" value="0x11"/>
        </attr>
        <attr name="toastXOffset" format="dimension"/>
        <attr name="toastYOffset" format="dimension"/>
    </declare-styleable>


</resources>