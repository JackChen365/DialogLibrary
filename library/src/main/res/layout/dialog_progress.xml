<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="?progressBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="?progressHorizontalPadding"
    android:paddingRight="?progressHorizontalPadding"
    android:paddingTop="?progressVerticalPadding"
    android:paddingBottom="?progressVerticalPadding"
    android:theme="?promptProgress">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="?progressIndicatorWidth"
        android:layout_height="?progressIndicatorWidth"
        android:layout_marginRight="?progressIndicatorPadding"
        android:background="@null"
        android:indeterminateTint="?progressIndeterminateTint"/>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?progressTextColor"
        android:textSize="?progressTextSize"
        android:background="@null"/>


</LinearLayout>